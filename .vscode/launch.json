{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Product API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build.api",
            "program": "${workspaceFolder}/src/GoGo.Product.Api/bin/Debug/net6.0/GoGo.Product.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/GoGo.Product.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}